@model List<Grade>


<div class="card container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Grades List</h2>
        </div>


        <div >
            <a asp-controller="Grade" asp-action="Upsert" class="btn btn-primary" style="width:100%">
                <i class="bi bi-plus-circle"></i> Add New Grade
            </a>
        </div>

    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Grade ID</th>
                <th>Grade Name</th>
                <th>School Name</th>
                <th>Certificate Name EN</th>
                <th>Certificate Name AR</th>
                <th>Grade Level</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grade in Model.OrderBy(u => u.GradeID))
            {
                <tr>
                    <td>@grade.GradeID</td>
                    <td>@grade.GradeName</td>
                    @* <td>@grade.SchoolName</td> *@
                    <td>@grade.CertificateNameEN</td>
                    <td>@grade.CertificateNameAR</td>
                    <td>@grade.GradeLevel</td>
                    <td> 
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Grade" asp-action="Upsert" asp-route-id="@grade.GradeID" class="btn btn-primary" style="height:40px">
                                <i class="bi bi-pencil-square" style="position: relative; top:-8px;"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>