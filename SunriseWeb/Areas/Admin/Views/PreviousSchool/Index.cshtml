@model List<PreviousSchool>


<div class="card container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Previous Schools List</h2>
        </div>


        <div >
            <a asp-controller="PreviousSchool" asp-action="Upsert" class="btn btn-primary" style="width:100%">
                <i class="bi bi-plus-circle"></i> Add New Previous School
            </a>
        </div>

    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Previous School ID</th>
                <th>Name EN</th>
                <th>Name AR</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var previousSchool in Model.OrderBy(u => u.PreviousSchoolID))
            {
                <tr>
                    <td>@previousSchool.PreviousSchoolID</td>
                    <td>@previousSchool.PreviousSchoolNameEN</td>
                    <td>@previousSchool.PreviousSchoolNameAR</td>

                    <td> 
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="PreviousSchool" asp-action="Upsert" asp-route-id="@previousSchool.PreviousSchoolID" class="btn btn-primary" style="height:40px">
                                <i class="bi bi-pencil-square" style="position: relative; top:-8px;"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>