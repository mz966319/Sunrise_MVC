@model GradeClassViewModel
<div class="row card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class=" py-2">@(Model.GradeClass.GradeClassID != 0 ? "Update" : "Create") Class</h2>
            </div>

            @* <div asp-validation-summary="All"></div> *@

        </div>
    </div>
    <div class="row card-body p-4">
        <form method="post" class="row">
            <input asp-for="GradeClass.GradeClassID" hidden />
            <div class="border p-3">
                <div class="row pb-2">
                    @if (Model.GradeClass.GradeClassID == 0)
                    {
                        <div class="col-6 mb-3">
                            <label class="form-label pb-2" asp-for="GradeClass.ClassName"></label>
                            <input asp-for="GradeClass.ClassName" class="form-control" placeholder="">
                            <span asp-validation-for="GradeClass.ClassName" class="text-danger"></span>
                        </div>
                        <div class=" py-2 col-6">
                            <label asp-for="GradeClass.GradeID" class="form-label"></label>
                            <select asp-for="@Model.GradeClass.GradeID" asp-items="@Model.GradeList" class="form-select border-0 shadow">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <span asp-validation-for="GradeClass.GradeID" class="text-danger"></span>
                        </div>
                        <div class="col-6 form-label mb-3">
                            <label class="form-label" asp-for="GradeClass.SectionName"></label>
                            <select class="form-select" asp-for="GradeClass.SectionName">
                                <option>@SD.Boys</option>
                                <option>@SD.Girls</option>
                            </select>
                        </div> 
                    }
                    else
                    {
                        @* <div class="col-3"></div> *@
                        <div class="col-6 mb-3">
                            <label class="form-label pb-2" asp-for="GradeClass.ClassName"></label>
                            <input asp-for="GradeClass.ClassName" class="form-control" placeholder="">
                            <span asp-validation-for="GradeClass.ClassName" class="text-danger"></span>
                        </div>
                        <div class="col-6 form-label mb-3">
                            <label class="form-label pb-2" asp-for="GradeClass.SectionName"></label>
                            <select class="form-select" asp-for="GradeClass.SectionName">
                                <option>@SD.Boys</option>
                                <option>@SD.Girls</option>
                            </select>
                        </div>
                        <input asp-for="@Model.GradeClass.GradeID" hidden />

                    }

                </div>
                
                
                

                <div class=" pt-2">
                    @if (Model.GradeClass.GradeClassID != 0)
                    {
                        <button type="submit" class="btn btn-outline-primary btn-lg" style="width:25%">Update</button>

                    }
                    else
                    {
                        <button type="submit" class="btn btn-outline-primary btn-lg" style="width:25%">Create</button>

                    }
                    <a asp-controller="GradeClass" asp-action="Index" class="btn btn-outline-secondary float-end">Back</a>

                </div>


            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}